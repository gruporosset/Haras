[MASTER]
extension-pkg-whitelist=sqlalchemy
ignore=.venv,venv,__pycache__,.git,.pytest_cache,node_modules
ignore-paths=.venv/.*,venv/.*

[MESSAGES CONTROL]
disable=C0111,C0114,C0115,W0718,C0103,E1102,R0903,R0902,C0302,W0622

[FORMAT]
max-line-length=88
good-names=i,j,k,ex,Run,_,id,db,pk

[BASIC]
class-rgx=[A-Z_][a-zA-Z0-9]+$
function-rgx=[a-z_][a-z0-9_]{2,30}$
variable-rgx=[a-z_][a-z0-9_]{2,30}$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

[DESIGN]
max-args=10
max-locals=20
max-returns=6
max-branches=15